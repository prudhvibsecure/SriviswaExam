                        app:fontType="1" />

                    <com.adi.exam.controls.CustomTextView
                        android:id="@+id/tv_option2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
