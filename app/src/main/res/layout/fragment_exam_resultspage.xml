<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ResultsPage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.adi.exam.controls.CustomTextView
            android:id="@+id/tv_scoore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="@dimen/_10sdp"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            android:textStyle="bold"
            app:fontType="2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/lightGray"
            android:orientation="horizontal">

            <com.adi.exam.controls.CustomTextView
                android:id="@+id/tv_tqtxt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="0.5dp"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:gravity="center"
                android:padding="@dimen/_10sdp"
                android:text="@string/tq"
                android:textColor="@android:color/black"
                app:fontType="1" />

            <com.adi.exam.controls.CustomTextView
                android:id="@+id/tv_tqval"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="0.5dp"
                android:layout_marginEnd="0.5dp"
                android:layout_marginRight="0.5dp"
                android:layout_marginBottom="0.5dp"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:gravity="center"
                android:padding="@dimen/_10sdp"
                android:textColor="@android:color/black"
                app:fontType="2" />

            <com.adi.exam.controls.CustomTextView
                android:id="@+id/tv_tatxt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="0.5dp"
                android:layout_marginBottom="0.5dp"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:gravity="center"
                android:padding="@dimen/_10sdp"
                android:text="@string/ta"
                android:textColor="@android:color/black"
                app:fontType="1" />

            <com.adi.exam.controls.CustomTextView
                android:id="@+id/tv_taval"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="0.5dp"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:gravity="center"
                android:padding="@dimen/_10sdp"
                android:textColor="@android:color/black"
                app:fontType="2" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/lightGray"
            android:orientation="horizontal">

            <com.adi.exam.controls.CustomTextView
                android:id="@+id/tv_catxt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="0.5dp"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:gravity="center"
                android:padding="@dimen/_10sdp"
                android:text="@string/ca"
                android:textColor="@android:color/black"
                app:fontType="1" />

            <com.adi.exam.controls.CustomTextView
                android:id="@+id/tv_caval"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="0.5dp"
                android:layout_marginEnd="0.5dp"
                android:layout_marginRight="0.5dp"
                android:layout_marginBottom="0.5dp"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:gravity="center"
                android:padding="@dimen/_10sdp"
                android:textColor="@android:color/black"
                app:fontType="2" />

            <com.adi.exam.controls.CustomTextView
                android:id="@+id/tv_icatxt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="0.5dp"
                android:layout_marginBottom="0.5dp"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:gravity="center"
                android:padding="@dimen/_10sdp"
                android:text="@string/ica"
                android:textColor="@android:color/black"
                app:fontType="1" />

            <com.adi.exam.controls.CustomTextView
                android:id="@+id/tv_icaval"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="0.5dp"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:gravity="center"
                android:padding="@dimen/_10sdp"
                android:textColor="@android:color/black"
                app:fontType="2" />

        </LinearLayout>

        <TableLayout
            android:id="@+id/tl_results"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>